---
layout: default
---

{% assign posts = collections.posts | getByCategory: cat %}

<div class="site-content">
    <div class="inner">
        <main class="site-main">
            <article class="post">
                <header class="entry-header">
                    <div class="entry-header-wrap">  
                        <h1 class="entry-title">{{ cat | capitalize }}</h1>
                    </div>
                </header><!-- .entry-header -->
                <div class="entry-content">
                    <p>
                        {{ posts.size }} total post(s):
                    </p>
                    <ul class="archive-posts-list">
                        {% for post in posts %}
                        <li><a href="{{ site.baseurl }}{{ post.url }}" rel="bookmark" title="Permanent Link to {{ site.baseurl }}{{ post.url }}">{{ post.data.title }}</a> <span class="archive-meta"> â€” <time class="published" datetime="{{ post.date | date: "%Y-%m-%d" }}">{{ post.date | date: "%B %e, %Y" }}</time></span></li>
                        {% endfor %}
                    </ul>
                </div><!-- .entry-content -->
            </article><!-- .post -->
        </main><!-- .site-main -->
        {% include sidebar %}
    </div><!-- .inner -->
</div><!-- .site-content -->
