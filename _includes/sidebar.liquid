
<aside class="sidebar">

    {% if site.author_bio and site.author_name %}
    <section class="widget widget-text">
        <h2 class="widget-title">About {{ site.author_name }}</h2>
        <p>{{ site.author_bio }}</p>
        <div style="margin:auto;width:200px;padding-bottom:0px">
        {% include coffee %}
        </div>
    </section><!-- .widget-text -->
    {% endif %}

    <section class="widget widget-text">
        <div style="margin:auto;">
        <!--
        <script async type="text/javascript" src="//cdn.carbonads.com/carbon.js?serve=CE7I653M&placement=wwwraymondcamdencom" id="_carbonads_js"></script>
        -->
        <!-- Ezoic - sidebar_middle - sidebar_middle -->
        <div id="ezoic-pub-ad-placeholder-101"> </div>
        <!-- End Ezoic - sidebar_middle - sidebar_middle -->
        </div>
    </section>

    {% assign posts = collections.posts | reverse %}

    <section class="widget widget-recent-posts">
    <h2 class="widget-title">Latest Posts</h2>
    <ul class="recent-posts" id="recent-posts">
        {% for post in posts limit:5 %}
    <li class="recent-item"><a href="{{ site.url }}{{ post.url }}">{{ post.data.title }}</a> <span>{{ post.date | date: "%B %e, %Y" }}</span></li>
        {% endfor %}
    </ul>
    </section>

    {% if popularposts %}
    <section class="widget widget-recent-posts">
    <h2 class="widget-title">Popular Posts</h2>
    <ul class="recent-posts">
        {% for post in popularposts limit:5 %}
            {% assign postData = post.path | toTitle: collections.posts %}
            {% if postData.title != "" %}
    <li class="recent-item"><a href="{{ site.url }}{{ post.path }}">{{ postData.title }}</a> <span> {{ postData.date | date: "%B %e, %Y" }}</span></li>
            {% endif %}
        {% endfor %}
    </ul>
    </section>
    {% endif %}

    <section class="widget widget-text">
        <!-- Ezoic - sidebar_bottom - sidebar_bottom -->
        <div id="ezoic-pub-ad-placeholder-102"> </div>
        <!-- End Ezoic - sidebar_bottom - sidebar_bottom -->
    </section>
    
    {% assign cats = collections | postCategories %}

    <section class="widget widget-tags">
        <h2 class="widget-title">Categories</h2>
        <div class="tagcloud">
            {% for cat in cats %} 
                <a href="{{site.baseurl}}/categories/{{ cat | myEscape }}">{{ cat }}</a>
            {% endfor %}
        </div><!-- .tagcloud -->
    </section><!-- .widget -->

    <!--Create a sorted array of tags-->
    {% assign tags = collections | postTags %}

    <section class="widget widget-tags">
        <h2 class="widget-title">Tags</h2>
        <div class="tagcloud">
            {% for tag in tags %}
            <a href="{{site.baseurl}}/tags/{{ tag | myEscape }}/">{{ tag }}</a>
            {% endfor %}
        </div><!-- .tagcloud -->
    </section><!-- .widget -->

</aside><!-- .sidebar -->
